<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <View
        android:id="@+id/editor_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E8E9ED" />

    <ImageButton
        android:id="@+id/action_insert_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/selector_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editor_divider" />

    <ImageButton
        android:id="@+id/action_bold"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/selector_bold"
        app:layout_constraintStart_toEndOf="@id/action_insert_image"
        app:layout_constraintTop_toBottomOf="@id/editor_divider" />

    <ImageButton
        android:id="@+id/action_Italic"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/selector_italic"
        app:layout_constraintStart_toEndOf="@id/action_bold"
        app:layout_constraintTop_toBottomOf="@id/editor_divider" />

    <ImageButton
        android:id="@+id/action_insert_link"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/selector_link"
        app:layout_constraintStart_toEndOf="@id/action_Italic"
        app:layout_constraintTop_toBottomOf="@id/editor_divider" />
</android.support.constraint.ConstraintLayout>